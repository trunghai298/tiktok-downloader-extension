{
  "name": "Tiktok downloader",
  "description": "Tiktok downloader extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "activeTab", "downloads", "scripting"],
  "icons": {},
  "action": {},
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://tiktok.com/*", "https://www.tiktok.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "host_permissions": [
    "*://*.tiktok.com/*",
    "https://tiktok.com/*",
    "https://*.tiktokcdn.com/*",
    "https://*.tiktokv.com/*"
  ]
}
